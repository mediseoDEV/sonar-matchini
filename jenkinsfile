pipeline {
    agent any
    stages {
        stage('first test') {
            steps {
                echo 'first test'
            }
        }

               stage('Checkout from GitHub') {
                   steps {
                       script {
                           // Cloner le référentiel GitHub en spécifiant l'URL
                           checkout([$class: 'GitSCM', branches: [[name: 'main']], userRemoteConfigs: [[url: 'https://github.com/mediseoDEV/sonar-matchini.git']]])
                       }
                   }
               }

            stage('npm install') {
                  steps {

                     sh 'cd /var/lib/jenkins/workspace/sonarQubeMatchini && npm install'
                     sh 'cd /var/lib/jenkins/workspace/sonarQubeMatchini && npm install -D sonarqube-scanner'

                  }
              }

            //   stage('npm SONARQUBE') {
            //       steps {
            //           script {
            //                 sh 'sonar-scanner -Dsonar.login=sqa_5819c0b9106fc11a111f8aadefff70940c5726ec -Dsonar.project.settings=/var/lib/jenkins/workspace/sonarQubeMatchini/sonar-project.properties'

            //           }
            //       }
            //   }
                        stage('npm SONARQUBE') {
                         steps {
                    script {
                                            

                        def scannerHome = tool name: 'SONAR_SCANER', type: 'hudson.plugins.sonar.SonarRunnerInstallation'
                        withEnv(["PATH+JDK=${env.JAVA_HOME}/bin:${env.PATH}"]) {
                             sh 'ls -li'

                            sh "cd /${scannerHome} sonar-scanner -Dsonar.login=sqa_5819c0b9106fc11a111f8aadefff70940c5726ec -Dsonar.project.settings=/var/lib/jenkins/workspace/sonarQubeMatchini/sonar-project.properties"
                        }
                    }
    }
}

                      
    }
}